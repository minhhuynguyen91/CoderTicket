<!DOCTYPE html>
<html>
<head>
  <title>CsTemplate</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-fixed-top navbar-dark bg-inverse">
    <%= link_to 'Coder Ticket', root_path, class: 'navbar-brand' %>
    <ul class="nav navbar-nav">
      <% if current_user %>
        <li class="nav-item">
          <%= link_to 'Log Out', signout_path, :method => :delete, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to current_user.email, '#', class: 'nav-link' %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to 'Log In', signin_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Sign Up', new_user_path, class: 'nav-link' %>
        </li>  
      <% end %>
      
      <% if current_user %>
        <li class="nav-item" style="float: right">
          <%= link_to 'Create Event', new_event_path, class: 'nav-link' %>
        </li>
        <li class="nav-item" style="float: right">
          <%= link_to 'My Event', mines_events_path, class: 'nav-link' %>
        </li>
      <% else %>
        <li class="nav-item" style="float: right">
          <%= link_to "Sign in with facebook", "/auth/facebook", class: 'nav-link' %>
        </li>
      <% end %>
    </ul>
  </nav>  
<%= render 'shared/flash_message' %>
<%= yield %>

</body>
</html>
